<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Feedbacks - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }
        .navbar {
            background-color: #003366;
        }
        .navbar-brand, .nav-link {
            color: white !important;
        }
        .nav-link:hover {
            color: rgba(255,255,255,0.8) !important;
        }
        .content-container {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #003366;
            color: white;
            border-radius: 10px 10px 0 0 !important;
        }
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.8em;
        }
        .suggestions-cell {
            max-width: 300px; /* Increased width since we removed Actions column */
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .rating-badge {
            min-width: 45px;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/admin/home">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/feedbacks">View Feedbacks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/faculty">Manage Faculty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/courses">Manage Courses</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content -->
    <div class="container content-container">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">All Feedbacks</h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-light btn-sm" onclick="exportToCSV()">
                        <i class="bi bi-download"></i> Export to CSV
                    </button>
                    <div class="input-group input-group-sm" style="width: 200px;">
                        <input type="text" id="searchInput" class="form-control" placeholder="Search...">
                        <button class="btn btn-light" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Course</th>
                                <th>Faculty</th>
                                <th class="text-center">Teaching Quality</th>
                                <th class="text-center">Course Materials</th>
                                <th class="text-center">Student Engagement</th>
                                <th>Suggestions</th>
                                <th>Submitted At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% feedbacks.forEach((feedback, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= feedback.course ? feedback.course.name : 'N/A' %></td>
                                    <td><%= feedback.faculty ? feedback.faculty.fullName : 'N/A' %></td>
                                    <td class="text-center">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: <%= (feedback.q1/5)*100 %>%" aria-valuenow="<%= feedback.q1 %>" aria-valuemin="0" aria-valuemax="5">
                                                <%= feedback.q1 %>/5
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: <%= (feedback.q2/5)*100 %>%" aria-valuenow="<%= feedback.q2 %>" aria-valuemin="0" aria-valuemax="5">
                                                <%= feedback.q2 %>/5
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: <%= (feedback.q3/5)*100 %>%" aria-valuenow="<%= feedback.q3 %>" aria-valuemin="0" aria-valuemax="5">
                                                <%= feedback.q3 %>/5
                                            </div>
                                        </div>
                                    </td>
                                    <td class="suggestions-cell" title="<%= feedback.suggestions %>">
                                        <% if (feedback.suggestions) { %>
                                            <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#suggestionModal<%= feedback.id %>">
                                                View
                                            </button>
                                            <!-- Suggestion Modal -->
                                            <div class="modal fade" id="suggestionModal<%= feedback.id %>" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Suggestions</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <%= feedback.suggestions %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <span class="text-muted">No suggestions</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(feedback.submittedAt).toLocaleDateString() %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchText = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('tbody tr');
            
            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });
        });

        // Export to CSV
        function exportToCSV() {
            const table = document.querySelector('table');
            let csv = [];
            const rows = table.querySelectorAll('tr');
            
            for (const row of rows) {
                const cols = row.querySelectorAll('td,th');
                const rowArray = [];
                for (const col of cols) {
                    rowArray.push('"' + (col.textContent || '').trim() + '"');
                }
                csv.push(rowArray.join(','));
            }

            const csvContent = csv.join('\n');
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.setAttribute('download', 'feedbacks.csv');
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>
