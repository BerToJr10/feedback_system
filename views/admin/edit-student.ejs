<%- include('../partials/header') %>
<div class="container my-5">
  <h3>Edit Student</h3>
  <form action="/admin/edit-student/<%= student.id %>" method="POST" class="row g-3">
    <div class="col-md-4">
      <input type="text" name="fullName" value="<%= student.fullName %>" class="form-control" required>
    </div>
    <div class="col-md-4">
      <input type="text" name="rollNumber" value="<%= student.rollNumber %>" class="form-control" required>
    </div>
    <div class="col-md-4">
      <input type="text" name="department" value="<%= student.department || '' %>" class="form-control">
    </div>
    <div class="col-12 d-flex justify-content-between">
      <a href="/admin/manage-students" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>
</div>
<%- include('../partials/footer') %>
