<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Submit Feedback</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
    }

    .navbar {
      background-color: #003366;
    }

    .navbar-brand,
    .nav-link,
    .btn-logout {
      color: #fff !important;
    }

    .navbar-nav .nav-link {
      color: white;
      transition: color 0.3s ease;
    }

    .navbar-nav .nav-link:hover {
      color: #ffcc00 !important;
    }

    .btn-logout {
      color: white;
      border-color: white;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-logout:hover {
      background-color: #dc3545 !important;
      color: white !important;
      border-color: #dc3545 !important;
    }

    .card {
      margin-top: 2rem;
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 15px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-label {
      font-weight: 500;
    }

    .form-select, .form-control {
      border-radius: 8px;
    }

    .btn-submit {
      background-color: #003366;
      color: white;
      padding: 10px 30px;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .btn-submit:hover {
      background-color: #004080;
      transform: translateY(-2px);
    }

    footer {
      background-color: #003366;
      color: white;
      padding: 20px;
      text-align: center;
      margin-top: 30px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-3">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="#">
        <img src="/images/logo.png" alt="Sherubtse Logo" width="30" height="30" class="d-inline-block align-text-top me-2">
        Sherubtse College Feedback System
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <div class="d-flex">
          <a href="/user/home" class="btn btn-outline-light me-2">Home</a>
          <a href="/logout" class="btn btn-outline-light btn-logout">Log Out</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body p-4">
            <h4 class="text-center mb-4">Course Feedback Form</h4>
            
            <% if (typeof error !== 'undefined' && error) { %>
              <div class="alert alert-danger">
                <%= error %>
              </div>
            <% } %>

            <form action="/user/submit-feedback" method="POST">
              <!-- Course Selection -->
              <div class="mb-3">
                <label for="course" class="form-label">Course</label>
                <select class="form-select" name="courseId" id="course" required onchange="updateFaculty()">
                  <option value="">Select your course</option>
                  <% if (courses && courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                      <option 
                        value="<%= course.id %>" 
                        data-faculty-id="<%= course.faculty ? course.faculty.id : '' %>" 
                        data-faculty-name="<%= course.faculty ? course.faculty.fullName : 'N/A' %>" 
                        data-faculty-dept="<%= course.faculty ? course.faculty.department : 'N/A' %>">
                        <%= course.name %> (<%= course.code %>)
                      </option>
                    <% }); %>
                  <% } else { %>
                    <option value="" disabled>No courses available</option>
                  <% } %>
                </select>
              </div>

              <!-- Faculty Display -->
              <div class="mb-3">
                <label for="faculty" class="form-label">Faculty</label>
                <input type="text" class="form-control" id="facultyDisplay" readonly>
                <input type="hidden" name="facultyId" id="facultyId">
              </div>

              <!-- Rating Questions -->
              <div class="mb-3">
                <label class="form-label">Teaching Quality</label>
                <select class="form-select" name="q1" required>
                  <option value="">Rate</option>
                  <option value="5">Excellent (5)</option>
                  <option value="4">Very Good (4)</option>
                  <option value="3">Good (3)</option>
                  <option value="2">Average (2)</option>
                  <option value="1">Poor (1)</option>
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Course Materials</label>
                <select class="form-select" name="q2" required>
                  <option value="">Rate</option>
                  <option value="5">Excellent (5)</option>
                  <option value="4">Very Good (4)</option>
                  <option value="3">Good (3)</option>
                  <option value="2">Average (2)</option>
                  <option value="1">Poor (1)</option>
                </select>
              </div>

              <div class="mb-3">
                <label class="form-label">Student Engagement</label>
                <select class="form-select" name="q3" required>
                  <option value="">Rate</option>
                  <option value="5">Excellent (5)</option>
                  <option value="4">Very Good (4)</option>
                  <option value="3">Good (3)</option>
                  <option value="2">Average (2)</option>
                  <option value="1">Poor (1)</option>
                </select>
              </div>

              <div class="mb-4">
                <label for="suggestions" class="form-label">Additional Suggestions (optional)</label>
                <textarea class="form-control" name="suggestions" id="suggestions" rows="3"></textarea>
              </div>

              <div class="text-center">
                <button type="submit" class="btn btn-submit">Submit Feedback</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <small>&copy; 2025 Sherubtse College. All rights reserved.</small>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
  function updateFaculty() {
    const courseSelect = document.getElementById('course');
    const selectedOption = courseSelect.options[courseSelect.selectedIndex];
    
    const facultyId = selectedOption.getAttribute('data-faculty-id');
    const facultyName = selectedOption.getAttribute('data-faculty-name');
    const facultyDept = selectedOption.getAttribute('data-faculty-dept');

    if (facultyId) {
      document.getElementById('facultyId').value = facultyId;
      document.getElementById('facultyDisplay').value = `${facultyName} (${facultyDept})`;
    } else {
      document.getElementById('facultyId').value = '';
      document.getElementById('facultyDisplay').value = 'No faculty assigned';
    }
  }

  // Initialize faculty on page load
  window.addEventListener('DOMContentLoaded', updateFaculty);
</script>

</body>
</html>
